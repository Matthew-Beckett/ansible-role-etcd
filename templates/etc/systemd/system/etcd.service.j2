#jinja2: trim_blocks:False
{%- if not etcd_settings['discovery-srv'] %}
{%- macro cluster_hosts() -%}
{%- for host in groups[etcd_ansible_group] -%}
{% if hostvars[host]['ansible_' + etcd_interface].ipv4 is defined and hostvars[host]['ansible_' + etcd_interface].ipv4.address is defined %}
    {{ hostvars[host]['ansible_' + etcd_interface].ipv4.address }}
{% elif hostvars[host]['ansible_' + etcd_interface].ipv6 is defined and hostvars[host]['ansible_' + etcd_interface].ipv6.address is defined %}
    {{ hostvars[host]['ansible_' + etcd_interface].ipv6.address }}
{% endif %}
{%- endfor -%} 
{%- endmacro -%}
{%- set x=etcd_settings.__setitem__('initial-cluster',cluster_hosts()) -%}
{%- set x=etcd_settings.__delitem__('discovery-srv') -%}
{%- endif %}
[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd/

[Service]
{% if etcd_allow_unsupported_archs %}
Environment=ETCD_UNSUPPORTED_ARCH={{etcd_architecture}}
{% endif %}
ExecStart={{etcd_bin_dir}}/etcd \
{%- for setting in etcd_settings|sort %}
  --{{setting}}="{{etcd_settings[setting]}}" {% if not loop.last %}\{% endif %}
{%- endfor %}
Restart=on-failure
RestartSec=5
Type=notify

[Install]
WantedBy=multi-user.target
